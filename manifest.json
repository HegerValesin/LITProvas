{
  "manifest_version": 2,
  "name": "LIT Provas",
  "version": "1.0",
  "description": "Sistema de provas Unichristus",
  "icons": {
    "16": "public/img/LogoU.png"
  },
  "offline_enabled": true,
  "permissions": [],
  "browser_action": {
    "default_icon": {
      "16": "public/img/LogoU.png"
    }
  },
  "background": {
    "scripts": ["public/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://hegervfp.local/*"],
      "js": ["public/js/ckeditor/ckeditor.js", "public/js/ckeditor/config.js"],
      "run_at": "document_idle"
    }
  ], 
  "web_accessible_resources": [
        "public/**",
        "!public/js/script.js",
        "src/**",
        "!src/routes.js",
        "src/telas/**",
        "src/telas/provas/**",
        "!src/telas/provas/script.js",
        "src/telas/apresentacao/**",
        "!src/telas/apresentacao/script.js",
        "src/telas/finalizar/**",
        "!src/telas/finalizar/script.js",
        "public/js/ckeditor/**",
        "!public/js/ckeditor/*.js"
      ]
}
